@model IEnumerable<Walmart.ApplicationCore.DtoModels.ProductsWithPhotoDto>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/style3.css">
<style>
  #btn1{
    padding-top: 10px;
  }
  .img1{
    top: -2px;
  }
  body{
    display: flex;
    flex-wrap: wrap;
  }
</style>
<div class="row row-cols-5" style="width: 85%;margin:25px auto" id="search">
<p style="width:100%">
    @if((string)ViewData["Method"]! == "Category"){
        <span style="font-size: 20px;font-weight:900">@ViewData["Name"] <span style="color: gray;font-weight:300;font-size:20px">@("(" + Model.Count() + ")")</span></span>
    }else if((string)ViewData["Method"]! == "SubCategory"){
        <span style="font-size: 20px;font-weight:900">@ViewData["Name"] <span style="font-weight: 300;">in</span> @ViewData["SubName"] <span style="color: gray;font-weight:300;font-size:20px">@("(" + Model.Count() + ")")</span></span>
    }else {
        <span style="font-size: 20px;font-weight:900">Results for @("\"" + ViewData["Name"] + "\"") <span style="color: gray;font-weight:300;font-size:20px">@("(" + Model.Count() + ")")</span></span>
    }
</p>
@foreach (var item in Model)
{
    <a href="@Url.Action("ProductDetails", "Home", new { id = @item.ProductId})" class="item" style="margin-bottom:20px">
        <div style="height: 189.26px;">
          <img src="~/@item.Image_Path" alt="" style="border-radius: 0;width: 100%;height: 100%;object-fit: contain;"/>
        </div>
        <p style="font-weight: 700;font-size:16px">$@item.Product_Price</p>
        <p style="margin-top: 5px;">@item.Product_Name</p>
        <button style="border-radius:25px;padding:7px 17px 7px 17px;margin:5px 0 15px 0;background-color:#0071dc;color:white">+ Add</button>
    </a>
}
</div>